{
  "manifest_version": 2,

  "name": "Youtube-distraction-filter",
  "description": "Remove distracting elements from youtube",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch?v=*", "https://www.tomheadifen.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
